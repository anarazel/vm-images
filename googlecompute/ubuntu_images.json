{
  "builders": [
    {
      "type": "googlecompute",
      "name": "docker",
      "project_id": "{{user `gcp_project_id`}}",
      "zone": "us-central1-a",
      "source_image": "ubuntu-minimal-1804-bionic-{{user `gce_base_image_version`}}",
      "image_name": "docker-builder-{{user `gce_base_image_version`}}",
      "image_family": "docker-builder",
      "ssh_username": "cirrus",
      "ssh_pty": "true",
      "preemptible": "true",
      "tags": ["packer"]
    },
    {
      "type": "googlecompute",
      "name": "kvm",
      "project_id": "{{user `gcp_project_id`}}",
      "zone": "us-central1-a",
      "source_image": "ubuntu-minimal-1804-bionic-{{user `gce_base_image_version`}}",
      "image_name": "docker-kvm-{{user `gce_base_image_version`}}",
      "image_family": "docker-kvm",
      "min_cpu_platform": "Intel Haswell",
      "image_licenses": ["projects/vm-options/global/licenses/enable-vmx"],
      "ssh_username": "cirrus",
      "ssh_pty": "true",
      "preemptible": "true",
      "tags": ["packer"]
    },
    {
      "type": "googlecompute",
      "name": "packer",
      "project_id": "{{user `gcp_project_id`}}",
      "zone": "us-central1-a",
      "source_image": "ubuntu-minimal-1804-bionic-{{user `gce_base_image_version`}}",
      "image_name": "ubuntu-packer-{{user `gce_base_image_version`}}",
      "image_family": "ubuntu-packer",
      "ssh_username": "ubuntu",
      "ssh_pty": "true",
      "preemptible": "true",
      "tags": ["packer"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update -y -qq",
        "sudo apt-get install -y -qq git vim build-essential zip"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y -qq openjdk-11-jdk",
        "sudo apt-get install -y python-pip python-dev build-essential",
        "sudo apt-get install -y ruby-dev",
        "sudo gem install bundler",
        "sudo pip install awscli --upgrade",
        "sudo pip install docker docker-compose --upgrade",
        "curl https://cli-assets.heroku.com/install-ubuntu.sh | sh"
      ],
      "only": ["docker"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y -qq apt-transport-https ca-certificates curl software-properties-common",
        "curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo apt-key add -",
        "sudo add-apt-repository \"deb [arch=amd64] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable\"",
        "sudo apt-get update",
        "sudo DEBIAN_FRONTEND=noninteractive apt-get install -y -qq docker-ce"
      ],
      "only": ["docker", "kvm"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo docker pull cirrusci/wget:latest",
        "sudo docker pull cirrusci/android-sdk:tools",
        "sudo docker pull cirrusci/android-sdk:29",
        "sudo docker pull cirrusci/flutter:stable",
        "sudo docker pull cirrusci/flutter:latest"
      ],
      "only": ["kvm"]
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install qemu-kvm -y"
      ],
      "only": ["kvm"]
    },
    {
      "type": "shell",
      "inline": [
        "wget https://releases.hashicorp.com/packer/1.4.4/packer_1.4.4_linux_amd64.zip",
        "sudo unzip packer_1.4.4_linux_amd64.zip -d packer",
        "sudo chmod +x packer/packer",
        "sudo mv packer/packer /usr/bin/",
        "sudo rm packer_1.4.4_linux_amd64.zip",
        "sudo rm -rf packer"
      ],
      "only": ["packer"]
    }
  ]
}